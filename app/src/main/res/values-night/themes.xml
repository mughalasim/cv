<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_dark</item>
        <!-- Customize your theme here. -->
        <item name="chipCornerRadius">@dimen/border_corner_radius</item>
    </style>

    <style name="Banner" parent="Theme.Main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>
        <item name="android:background">@color/grey_dark</item>
    </style>

    <style name="StandardText" parent="Theme.Main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLarge" parent="StandardText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal" parent="StandardText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextNormalBold" parent="StandardText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmallBold" parent="StandardText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="TextSmall" parent="StandardText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

</resources>